<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/save_item_layout_height"
    android:orientation="horizontal"
    android:padding="@dimen/save_item_layout_padding" >

    <ImageView
        android:id="@+id/saved_cocktail_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/splash_icon"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/save_item_icon_margin_left"
        android:layout_marginTop="@dimen/save_item_icon_margin_top"
        android:layout_marginRight="@dimen/save_item_icon_margin_right"
        android:layout_marginBottom="@dimen/save_item_icon_margin_bottom">
    </ImageView>

    <TextView
        android:id="@+id/saved_cocktail_name"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="@dimen/save_item_text_size"
        android:text="@string/cocktail_name_label"
        android:layout_weight="2"
        android:layout_gravity="left"
        android:gravity="left|center_vertical">
    </TextView>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/save_item_delete_height"
        android:id="@+id/saved_cocktail_delete"
        android:layout_weight="3"
        android:gravity="center"
        android:src="@drawable/ic_clear_grey"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/save_item_delete_margin_right" />

</LinearLayout>